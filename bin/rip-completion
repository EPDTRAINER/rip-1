#!/bin/sh
# usage: rip-completion
#
# Bash-only completion script for rip program names.
#
# In ~/.bashrc:
#   eval `rip-completion`

cat <<'completer'
_rip_complete () {
  COMPREPLY=();
  if [ $COMP_CWORD = 1 ]; then
    completes=`rip commands`;
    COMPREPLY=(`compgen -W "$completes" -- $2`);
  fi;
};
complete -F _rip_complete rip
completer
