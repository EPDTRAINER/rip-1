#!/usr/bin/env ruby
# Usage: rip-deref NAME VERSION

require 'rip/script'

target  = ARGV[0]
version = ARGV[1]

package = Rip::GemPackage.new(target, nil, version)

version = nil

gems = gem("list #{target} --remote").split("\n")
if gems.detect { |f| f =~ /^#{target} \((.+)\)/ }
  version = $1
end

unless version
  abort "#{target} #{version} could not be found"
end

puts version
