#!/usr/bin/env ruby
# Usage: rip-deref-gem NAME VERSION

require 'rip/script'

target  = ARGV[0]
version = ARGV[1]

if version
  puts version
  exit 0
end

package = Rip::GemPackage.new(target, nil, version)

if target.include? '/'
  spec = YAML.load(gem("spec #{target}"))
  version = spec.ivars['version'].ivars['version']
else
  gems = gem("list #{target} --remote").split("\n")
  if gems.detect { |f| f =~ /^#{target} \((.+)\)/ }
    version = $1
  end
end

if !version
  abort "#{target} #{version} could not be found"
end

puts version
