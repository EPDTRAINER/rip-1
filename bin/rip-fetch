#!/usr/bin/env ruby
# Usage: rip-fetch URL
#
# Downloads the package at URL to $RIPDIR/.packages using the appropriate
# transfer mechanism. Stores the package as PACKAGE-md5 where md5 is
# the hash of the URL from which it was retrieved.
#
# Prints the full path to the fetched package to standard out.
#
# Accepted transports:
#   git
#   hg
#   bzr
#   svn
#   curl + tar xzf
#   curl + tar xjf

$LOAD_PATH.unshift File.dirname(__FILE__) + "/../lib"
require 'rip/script'

target  = ARGV[0]
version = ARGV[1]

name     = target.split('/').last.chomp('.git')
packages = "#{PACKAGEDIR}/#{name}-#{Rip.md5("#{target}#{version}")}"

if File.directory?(packages)
  if version.nil?
    cd packages
    system("git pull origin master &> /dev/null")
  end

  puts packages
elsif system("git clone #{target} #{packages} &> /dev/null")
  cd packages
  version ||= "master"
  system("git checkout #{version} &> /dev/null")
  puts packages
else
  exit 1
end
