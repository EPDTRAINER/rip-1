#!/usr/bin/env ruby
# Usage: rip-fetch-gem NAME VERSION

require 'rip/script'

target  = ARGV[0]
version = ARGV[1]

if !target
  abort "no gem name given"
end

if !version
  abort "no gem version given"
end

package = Rip::GemPackage.from_hash(:source => target, :version => version)
cache   = package.cache_path

synchronize(cache) do
  if File.directory?(cache)
    puts cache
  else
    mkdir_p Rip.cache
    cd Rip.cache

    gem "fetch", target, "-v #{version}"

    if File.exist?(cache)
      puts cache
    else
      abort "#{target} #{version} not found"
    end
  end
end
