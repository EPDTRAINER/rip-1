#!/usr/bin/env ruby
# Usage: rip-fetch-gem NAME VERSION

require 'rip/script'

target  = ARGV[0]
version = ARGV[1]

if !target
  abort "no gem name given"
end

if !version
  abort "no gem version given"
end

cache = "#{Rip.cache}/#{target}-#{version}.gem"

synchronize(cache) do
  if File.file?(cache)
    puts cache
  else
    cd Rip.cache

    out = gem "fetch", target, "-v #{version}"

    if File.exist?(cache)
      puts cache
    else
      abort "#{target} #{version} not found"
    end
  end
end
