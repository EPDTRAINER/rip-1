#!/usr/bin/env ruby
# Usage: rip-fetch-git URL

require 'rip/script'
require 'optparse'

OptionParser.new do |opts|
  opts.on("--offline") do |v|
    $offline = true
  end
end.parse!

target = ARGV[0]

if !target
  abort "no git url given"
end

package = Rip::GitPackage.new(target)
repo    = package.cache_path

if $offline
  if File.directory?(repo)
    puts repo
    exit 0
  else
    exit 1
  end
end

synchronize(repo) do
  if File.directory?(repo)
    cd repo
    git "fetch -q"
    puts repo
  elsif system("git clone --bare --mirror #{target} #{repo} &> /dev/null")
    puts repo
  else
    abort "#{target} not found"
  end
end
