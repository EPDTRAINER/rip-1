#!/usr/bin/env ruby
# Usage: rip-package-ripfile FILE

$-e = true

require 'rip/script'

source = ARGV[0]

unless source =~ %r{\.rip$} && File.file?(source)
  exit 3 # Can't handle source
end

$-e = true

require 'rip/script'

File.read(source).split("\n").each do |package|
  puts rip(:package, package)
end
