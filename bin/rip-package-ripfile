#!/usr/bin/env ruby
# Usage: rip-package-ripfile FILE

$-e = true

require 'rip/script'

source = ARGV[0]

unless source =~ %r{\.rip$} && File.file?(source)
  exit 3 # Can't handle source
end

$-e = true

require 'rip/script'

File.read(source).each_line do |line|
  puts rip(:package, line.chomp)
end
