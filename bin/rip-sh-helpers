#!/usr/bin/env ruby
# usage: rip-sh-helpers
#
# Prints sh(1) code to install shell helper functions

require 'rip/script'

helpers = []
commands.each do |command|
 if command =~ /^sh-/
   helpers << $'
 end
end

helpers.each do |command|
  if commands.include?(command)
    warn "overriding rip-#{command} command"
  end
end

helpers.each do |command|
  puts <<-end_function
function rip-#{command} () {
  eval `rip-sh-#{command} $@`;
};
end_function
end

puts <<-end_functions
function rip () {
  command=$1;
  shift;
  case $command in
  #{helpers.join('|')})
    eval `rip-sh-$command $@`;;
  *)
    command rip $command $@;;
  esac;
};
end_functions
