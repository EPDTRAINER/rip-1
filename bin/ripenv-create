#!/usr/bin/env ruby
# Usage: ripenv-create RIPENV
#
# Creates the rip directory structure for RIPENV
#
# RIPENV/
# |-- bin
# |-- lib
# |-- man
# `-- RIPENV.ripenv

ENV['RIPENV'] = ARGV[0]

$LOAD_PATH.unshift File.dirname(__FILE__) + "/../lib"
require 'rip/script'

mkdir_p "#{RIPDIR}/#{RIPENV}/bin"
mkdir_p "#{RIPDIR}/#{RIPENV}/lib"
mkdir_p "#{RIPDIR}/#{RIPENV}/man"
touch   "#{RIPDIR}/#{RIPENV}/#{RIPENV}.ripenv"
ln_s    "#{RIPDIR}/#{RIPENV}", "#{RIPDIR}/active"
